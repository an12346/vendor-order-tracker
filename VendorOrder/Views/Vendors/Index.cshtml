@using VendorOrder.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{ 
  <h2>There are no vendors to display</h2>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a> - @vendor.Description</h3>
}

<h3><a href='/vendors/new'>Create a new Vendor</a></h3>
<h3><a href='/'>Return to home page</a></h3>


