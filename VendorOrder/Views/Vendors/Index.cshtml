@using VendorOrder.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{ 
  <h4>There are no vendors to display</h4>
}

@foreach (Vendor vendor in Model)
{
  <h4><a href='/vedors/@vendor.Id'>@vendor.Name</a></h4>
}

<p><a href='/vendors/new'>Create a new Vendor</a></p>
<p><a href='/'>Return to home page</a></p>


